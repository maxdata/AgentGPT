    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "backend",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "uvicorn",
            "args": [
                "backend.main:app",
                "--reload",
                "--host", "0.0.0.0", 
                "--port", "3001", 
            ],
            "jinja": true,
            "justMyCode": true
        },    
    ]
}